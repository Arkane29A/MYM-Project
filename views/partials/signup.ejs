<section class="vh-100 gradient-custom">


    <div class="container py-5 h-100">

      <div class="row d-flex justify-content-center align-items-center h-100">

        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
  
              <div class="mb-md-5 mt-md-4 pb-5">
  
                <h2 class="fw-bold mb-2 text-uppercase">Create a new account below!</h2>
                <p class="text-white-50 mb-5">Enter your credentials below</p>
  
                <!-- start -->

                <form action="/register" method="POST">
                <div class="form-outline form-white mb-4" id="email">
                  <input type="email" id="signupemail" class="form-control form-control-lg" name="email" />
                  <label class="form-label" for="signupemail">Email</label>
                </div>
  
                <div class="form-outline form-white mb-4" id="password">
                  <input type="password" id="signuppassword" class="form-control form-control-lg" name="password" />
                  <label class="form-label" for="signuppassword">Password</label>
                </div>

                <div class="form-outline form-white mb-4" id="password">
                  <input type="password" id="confirmsignuppassword" class="form-control form-control-lg" name="confirmpassword" />
                  <label class="form-label" for="confirmsignuppassword">Confirm Password</label>
                </div>

                <!-- end -->
                <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>
  
                <button id="signupbutton" class="btn btn-outline-light btn-lg px-5" type="submit">Sign up</button >
  
              </div>

            </form>

  
              <div>
                <p class="mb-0">Already have an account? <a id="login-link" href="" class="text-white-50 fw-bold">Login here </a>
                </p>
              </div>
  
            </div>
          </div>
        </div>
      </div>
    </div>





  <script>
      $('#login-link').click(function(e) {
          e.preventDefault();
          $.get('/partials/login.ejs', function(data) {
            $('#partial-container').html(data);
          }).done(function() {
            $('#partial-container').siblings().remove();
          })});
  </script>

  </section>
